{
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "ignore": [],
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80,
    "lineEnding": "lf"
  },
  "files": {
    "ignore": [
      ".wrangler/**",
      "worker-configuration.d.ts",
      "app/entry.server.tsx"
    ]
  },
  "linter": {
    "enabled": true,

    "rules": {
      "recommended": true,

      "correctness": {
        "noUnusedImports": "error"
      }
    }
  }
}
